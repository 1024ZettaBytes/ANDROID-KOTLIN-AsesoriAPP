<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">
    <LinearLayout android:layout_width="match_parent"
                  android:background="@color/colorPrimary"
                  android:orientation="vertical"
                  android:layout_height="100dp">


        <TextView android:layout_width="match_parent"
                  android:text="BIENVENIDO"
                  android:textAlignment="center"
                  android:textSize="30dp"
                  android:layout_marginTop="40dp"
                  android:textColor="#ffff"
                  android:layout_height="wrap_content"/>

    </LinearLayout>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">


        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"

                      android:layout_height="match_parent">
            <ImageView android:layout_width="200dp"
                       android:src="@drawable/asesoriapp_logo"
                       android:layout_gravity="center"
                       android:layout_marginTop="30dp"
                       android:layout_height="200dp"/>
            <EditText android:layout_width="match_parent"
                      android:hint="Correo electrónico..."
                      android:layout_marginTop="10dp"
                      android:layout_marginLeft="20dp"
                      android:layout_marginRight="20dp"
                      android:maxLines="1"
                      android:inputType="textEmailAddress"
                      android:id="@+id/txt_LoginCorreo"
                      android:background="@color/colorGris"
                      android:padding="10dp"
                      android:textColor="@color/colorTexto"
                      android:textSize="20dp"
                      android:layout_height="wrap_content"/>
            <EditText android:layout_width="match_parent"
                      android:hint="Contraseña"
                      android:layout_marginTop="10dp"
                      android:layout_marginLeft="20dp"
                      android:layout_marginRight="20dp"
                      android:maxLines="1"
                      android:id="@+id/txt_LoginPass"
                      android:background="@color/colorGris"
                      android:padding="10dp"
                      android:textColor="@color/colorTexto"
                      android:textSize="20dp"
                      android:layout_height="wrap_content"/>
            <ProgressBar android:layout_width="wrap_content"
                         android:id="@+id/pgsBarCargaLogin"
                         android:visibility="gone"
                         android:layout_gravity="center"
                         android:layout_height="wrap_content"/>
            <Button android:layout_width="180dp"
                    android:text="Iniciar sesión"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"
                    android:padding="10dp"
                    android:id="@+id/btn_login"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_azul_bordes"
                    android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:text="Olvidé mi contraseña"
                      android:layout_marginTop="20dp"
                      android:textColor="@color/colorPrimary"
                      android:textStyle="bold"
                      android:id="@+id/btn_contra"
                      android:layout_gravity="center"
                      android:layout_height="wrap_content"/>
            <Button android:layout_width="180dp"
                    android:text="No tengo cuenta"
                    android:layout_gravity="center"
                    android:textColor="@color/colorTexto"
                    android:padding="10dp"
                    android:id="@+id/btn_registro"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_gris"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>