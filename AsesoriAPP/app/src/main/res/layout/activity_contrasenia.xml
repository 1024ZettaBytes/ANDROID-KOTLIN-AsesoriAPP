<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".ContraseniaActivity">
    <LinearLayout android:layout_width="match_parent"
                  android:background="@color/colorPrimary"
                  android:orientation="vertical"
                  android:layout_height="100dp">




    </LinearLayout>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">


        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"

                      android:layout_height="match_parent">
<TextView android:layout_width="match_parent"
          android:textSize="22sp"
          android:textColor="@color/colorTexto"
          android:layout_marginTop="150dp"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:text="Se enviará un correo para restablecer su contraseña"
          android:textAlignment="center"
          android:layout_height="wrap_content"/>
            <EditText android:layout_width="match_parent"
                      android:hint="Correo electrónico de su cuenta..."
                      android:layout_marginTop="10dp"
                      android:layout_marginLeft="20dp"
                      android:layout_marginRight="20dp"
                      android:maxLines="1"
                      android:inputType="textEmailAddress"
                      android:id="@+id/txt_enviarCorreo"
                      android:background="@color/colorGris"
                      android:padding="10dp"
                      android:textColor="@color/colorTexto"
                      android:textSize="20dp"
                      android:layout_height="wrap_content"/>

            <ProgressBar android:layout_width="wrap_content"
                         android:id="@+id/pgsBarCargaEnviaCorreo"
                         android:visibility="gone"
                         android:layout_gravity="center"
                         android:layout_height="wrap_content"/>
            <Button android:layout_width="180dp"
                    android:text="Enviar"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"
                    android:padding="10dp"
                    android:id="@+id/btn_enviarContra"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/btn_azul_bordes"
                    android:layout_height="wrap_content"/>
            <Button android:layout_width="180dp"
                    android:text="cancelar"
                    android:layout_gravity="center"
                    android:textColor="@color/colorTexto"
                    android:padding="10dp"
                    android:id="@+id/btn_contraCancelar"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_gris"
                    android:layout_height="wrap_content"/>


        </LinearLayout>
    </ScrollView>

</LinearLayout>