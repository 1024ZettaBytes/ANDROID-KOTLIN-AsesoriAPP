<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".DetalleAsesoriaActivity">
    <LinearLayout android:layout_width="match_parent"
                  android:background="@color/colorPrimary"
                  android:orientation="vertical"
                  android:layout_height="100dp">
        <TextView android:layout_width="match_parent"
                  android:text="DATOS ASESORÍA"
                  android:textAlignment="center"
                  android:textSize="30dp"
                  android:layout_marginTop="40dp"
                  android:textColor="#ffff"
                  android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="match_parent">


        <ScrollView android:layout_width="match_parent"
                    android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_height="wrap_content">
                <LinearLayout android:layout_width="match_parent"
                              android:orientation="vertical"
                              android:layout_margin="30dp"
                              android:background="@drawable/btn_azul_bordes"
                              android:layout_height="wrap_content">
                    <ImageView android:layout_width="50dp"
                               android:src="@drawable/note_icon"
                               android:layout_gravity="center"
                               android:layout_marginTop="10dp"
                               android:layout_height="50dp"/>
                    <TextView android:layout_width="match_parent"
                              android:text="Programación I"
                              android:textAlignment="center"
                              android:textColor="#ffffff"
                              android:textSize="26dp"
                              android:id="@+id/detalleAsesoria_materia"
                              android:layout_height="wrap_content"/>
                    <ImageView android:layout_width="50dp"
                               android:src="@drawable/calendar_logo"
                               android:layout_gravity="center"
                               android:layout_marginTop="10dp"
                               android:layout_height="50dp"/>
                    <TextView android:layout_width="match_parent"
                              android:text="LUNES\n15:00-16:00"
                              android:textAlignment="center"
                              android:textColor="#ffffff"
                              android:textSize="26dp"
                              android:id="@+id/detalleAsesoria_horario"
                              android:layout_height="wrap_content"/>
                    <LinearLayout android:layout_width="match_parent"
                                  android:orientation="horizontal"
                                  android:layout_marginTop="20dp"
                                  android:layout_height="wrap_content">
                        <ImageView android:layout_width="wrap_content"
                                   android:src="@drawable/asesor_logo"
                                   android:layout_marginTop="10dp"
                                   android:layout_marginLeft="10dp"
                                   android:layout_height="wrap_content"/>
                        <TextView android:layout_width="match_parent"
                                  android:text="Eduardo Ramírez"
                                  android:layout_gravity="center"
                                  android:layout_marginLeft="10dp"
                                  android:textColor="#ffffff"
                                  android:textSize="24dp"
                                  android:id="@+id/detalleAsesoria_asesor"
                                  android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout android:layout_width="match_parent"
                                  android:orientation="horizontal"
                                  android:layout_marginTop="20dp"
                                  android:layout_marginBottom="30dp"
                                  android:layout_height="wrap_content">
                        <ImageView android:layout_width="wrap_content"
                                   android:src="@drawable/email_logo"
                                   android:layout_marginTop="10dp"
                                   android:layout_marginLeft="10dp"
                                   android:layout_height="wrap_content"/>
                        <TextView android:layout_width="match_parent"
                                  android:text="ramirezcota.eduardo@gmail.com"
                                  android:layout_gravity="center"
                                  android:layout_marginLeft="10dp"
                                  android:textColor="#ffffff"
                                  android:textSize="18dp"
                                  android:id="@+id/detalleAsesoria_correo"
                                  android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>

                <Button android:layout_width="200dp"
                        android:layout_gravity="center"
                        android:id="@+id/btnDetalleAsesoria_cerrar"
                        android:background="@drawable/btn_gris"
                        android:textColor="@color/colorTexto"
                        android:text="cerrar"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</LinearLayout>