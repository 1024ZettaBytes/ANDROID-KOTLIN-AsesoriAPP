<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".AsesorActivity">
    <LinearLayout android:layout_width="match_parent"
                  android:background="@color/colorPrimary"
                  android:orientation="vertical"
                  android:layout_height="100dp">
        <TextView android:layout_width="match_parent"
                  android:text="ASESOR"
                  android:textAlignment="center"
                  android:textSize="30dp"
                  android:layout_marginTop="40dp"
                  android:textColor="#ffff"
                  android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="match_parent">


        <ScrollView android:layout_width="match_parent"
                    android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_height="wrap_content">
                <LinearLayout android:layout_width="match_parent"
                              android:orientation="vertical"
                              android:layout_margin="30dp"
                              android:background="@drawable/btn_azul_bordes"
                              android:layout_height="wrap_content">
                    <ImageView android:layout_width="100dp"
                               android:id="@+id/asesor_foto"
                               android:src="@drawable/asesor_foto"
                               android:layout_gravity="center"
                               android:layout_marginTop="30dp"
                               android:layout_height="100dp"/>
                    <TextView android:layout_width="match_parent"
                              android:text="Eduardo Ramírez"
                              android:textAlignment="center"
                              android:textStyle="bold"
                              android:textColor="#ffffff"
                              android:textSize="26dp"
                              android:id="@+id/asesor_nombre"
                              android:layout_height="wrap_content"/>
                    <TextView android:layout_width="match_parent"
                              android:text="ISW"
                              android:textAlignment="center"
                              android:textColor="#ffffff"
                              android:textSize="26dp"
                              android:id="@+id/asesor_siglasCarrera"
                              android:layout_height="wrap_content"/>

                        <ImageView android:layout_width="wrap_content"
                                   android:src="@drawable/email_logo"
                                   android:layout_gravity="center"
                                   android:layout_marginTop="10dp"
                                   android:layout_height="wrap_content"/>
                        <TextView android:layout_width="match_parent"
                                  android:text="ramirezcota.eduardo@gmail.com"
                                  android:layout_gravity="center"
                                  android:textAlignment="center"
                                  android:textColor="#ffffff"
                                  android:layout_marginBottom="30dp"
                                  android:textSize="18dp"
                                  android:id="@+id/asesor_correo"
                                  android:layout_height="wrap_content"/>


                </LinearLayout>
                <TextView android:layout_width="match_parent"
                          android:text="Horarios agregados"
                          android:id="@+id/pgsBarCargaAsesorias"
                          android:textAlignment="center"
                          android:textSize="26dp"
                          android:layout_height="wrap_content"/>
                <ProgressBar android:layout_width="wrap_content"
                             android:layout_gravity="center"
                             android:visibility="gone"
                             android:layout_height="wrap_content"/>
                <TableLayout android:layout_width="match_parent"
                             android:layout_marginLeft="30dp"
                             android:id="@+id/asesor_tablaAsesorias"
                             android:layout_marginRight="30dp"
                             android:layout_marginTop="10dp"
                             android:layout_height="wrap_content">
                    <TableRow
                            android:id="@+id/Cabecera"
                            android:orientation="horizontal"
                            android:background="@color/colorTexto"

                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:id="@+id/asesor_ColumnaMateria"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5px"
                                android:text="Materia"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:textColor="#fafafafa"
                                android:textSize="24dp"/>

                        <TextView
                                android:id="@+id/ColumnaDía"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5px"
                                android:text="Día"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:textColor="#fafafafa"
                                android:textSize="24dp"/>
                        <TextView
                                android:id="@+id/ColumnaHorario"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5px"
                                android:text="Horario"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:textColor="#fafafafa"
                                android:textSize="24dp"/>

                    </TableRow>
                </TableLayout>
                <Button android:layout_width="wrap_content"
                        android:background="@drawable/btn_azul_bordes"
                        android:text="agregar"
                        android:id="@+id/btnAgregarAsesoria"
                        android:textColor="#ffffff"
                        android:layout_gravity="right"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"/>
                <Button android:layout_width="200dp"
                        android:layout_gravity="center"
                        android:id="@+id/btnAsesor_cerrarSesion"
                        android:background="@drawable/btn_gris"
                        android:textColor="@color/colorTexto"
                        android:text="cerrar sesión"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</LinearLayout>